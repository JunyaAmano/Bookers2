<div class="container">
  <% if @user.errors.any? %>
  <div class="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this product from being saved:</h2>
    <ul class="error-message">
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  <h2>User info</h2>
  <%= form_with model:@user, local:true do |f| %>
    <div class="field row">
      <label for="user_name">Name</label>
      <%= f.text_field :name, autofocus: true %>
    </div>
    <div class="field row">
      <label for="image">Image</label>
       <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    </div>
    <div class="field row">
      <label for="introduction">Introduction</label>
      <%= f.text_area :introduction, autofocus: true %>
    </div>
  <%= f.submit "Update User" , class: "btn-default" %>
  <% end %>
</div>
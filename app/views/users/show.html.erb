<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-3">
        <%= render 'books/list', book: @book, user: current_user %>
    </div>
    <div class="col-xs-9">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
         <% @books.each do |book| %>
              <tr>
                <td>
                  <!--<a href="/users/24431">-->
                <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, class: "profile-thumb", fallback: "no_image.jpg", size:'40x40'%> 

                </td>
                <td class="content"><%= link_to book.title, book, class: "book_#[book.id]" %></td>
                <td><%= book.body %></td>
              </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
  <h2>User info</h2>
    <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, class: "profile-thumb", fallback: "no_image.jpg"%>
  <table class="table">
    <tbody>
      <tr>
    	  <th>name</th>
    	  <th><%= current_user.name %></th>
      </tr>
      <tr>
    	  <th>introduction</th>
    	  <th><%= current_user.introduction %></th>
      </tr>
    </tbody>
  </table>


<div class="row">
  <!--<a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_24462" href="/users/24462/edit"></a>-->
  <%= link_to "",edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
</div>

  <h2>New book</h2>
  <%= form_with(model: book, local: true) do |f| %>
    <div class="row">
      <div class="field row">
        <label for="book_title">Title</label>
        <%= f.text_field :title, class: "col-xs-12 book_title"%>
      </div>
      <div class="field row">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body, class: "col-xs-12 book_body"%>
      </div>
      <div class="field row">
        <%= f.submit "Create Book", class: "btn btn-primary col-xs-12"%>
      </div>
    </div>
  <% end %>